<Page
    x:Class="YobotChart.Pages.DashBoardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:buttonComponent="clr-namespace:YobotChart.UiComponents.ButtonComponent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YobotChart.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:yobotChart="clr-namespace:YobotChart"
    Title="DashBoardPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.DataContext>
        <local:DashBoardPageVm />
    </Page.DataContext>
    <Grid>

        <Border>
            <ListBox
                x:Name="Container"
                MinWidth="300"
                Background="Transparent"
                BorderThickness="0"
                ItemsSource="{Binding Collections}"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Label
                            Width="{Binding L}"
                            Height="{Binding L}"
                            Margin="10"
                            Background="#41134875" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.Resources>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Canvas.Left" Value="{Binding X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Y}" />
                    </Style>
                </ItemsControl.Resources>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas
                            Width="{Binding MaxWidth}"
                            Height="{Binding MaxHeight}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ListBox>
        </Border>
        <StackPanel
            Margin="2"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <buttonComponent:CommonButton
                Height="auto"
                Padding="8,3"
                HorizontalAlignment="Left"
                BorderBrush="Black"
                BorderThickness="1"
                Click="AddScale1_Click"
                Content="Append Scale1" />
            <buttonComponent:CommonButton
                Height="auto"
                Padding="8,3"
                HorizontalAlignment="Left"
                BorderBrush="Black"
                BorderThickness="1"
                Click="AddScale2_Click"
                Content="Append Scale2" />
            <buttonComponent:CommonButton
                Height="auto"
                Padding="8,3"
                HorizontalAlignment="Left"
                BorderBrush="Black"
                BorderThickness="1"
                Click="AddScale3_Click"
                Content="Append Scale3" />
            <buttonComponent:CommonButton
                Height="auto"
                Padding="8,3"
                HorizontalAlignment="Left"
                BorderBrush="Black"
                BorderThickness="1"
                Click="AddScale4_Click"
                Content="Append Scale4" />
        </StackPanel>
    </Grid>
</Page>
