<win32:WindowEx
    x:Class="YobotChart.WidgetWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YobotChart"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:YobotChart.UserControls"
    xmlns:win32="clr-namespace:YobotChart.Shared.Win32;assembly=YobotChartShared.win32"
    Title="WidgetWindow"
    Width="400"
    Height="250"
    Background="White"
    MouseLeftButtonDown="WindowEx_MouseLeftButtonDown"
    ResizeMode="NoResize"
    Shown="WindowEx_Shown"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <userControls:DashboardTemplateControl
            x:Name="Test"
            SnapsToDevicePixels="True"
            UseLayoutRounding="True" />
        <Border BorderBrush="#484848" BorderThickness="1" />
        <ResizeGrip
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Cursor="SizeNWSE"
            MouseLeftButtonDown="WindowResize" />
    </Grid>
</win32:WindowEx>
